[env]
[[ "$INFILL_DEFAULT" = "osx" ]] && platform=darwin
[[ "$INFILL_DEFAULT" = "linux" ]] && platform=linux
go_appengine_sdk_version=1.9.53

[install]
if [[ "$platform" && ! -e $HOME/opt/google-cloud-sdk  ]]; then
  mkdir -p $HOME/opt
  curl https://sdk.cloud.google.com | bash -s -- --install-dir=$HOME/opt --disable-prompts
  gcloud components install app-engine-go -q
fi

if [[ ! -e "$HOME/opt/go_appengine" ]]; then
  wget https://storage.googleapis.com/appengine-sdks/featured/go_appengine_sdk_${platform}_amd64-${go_appengine_sdk_version}.zip -O /tmp/go_appengine_sdk.zip
  unzip /tmp/go_appengine_sdk.zip -d $HOME/opt
fi

if [[ ! -e $HOME/bin/geco  ]]; then
  wget https://github.com/minimum2scp/geco/releases/download/2.0.5/geco_${platform}_amd64.zip -O /tmp/geco.zip
  unzip -j /tmp/geco.zip -d $HOME/bin
fi

[update]
gcloud components update

[uninstall]
if [[ -e $HOME/opt/google-cloud-sdk ]]; then
  rm -rf $HOME/opt/google-cloud-sdk
fi

if [[ -e "$HOME/opt/go_appengine" ]]; then
  rm -rf "$HOME/opt/go_appengine"
fi

if [[ -e $HOME/bin/geco ]]; then
  rm -rf $HOME/bin/geco
fi
